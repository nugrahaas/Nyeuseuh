<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F7F7"
    tools:context="._fragment._package.Outlet">

    <TextView
        android:id="@+id/tv_outlet"
        android:text="Outlet"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_alignLeft="@id/cardview_outlet"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="@dimen/_34sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_outlet"
        android:outlineAmbientShadowColor="@color/cardview_dark_background"
        android:layout_width="@dimen/_260sdp"
        app:cardCornerRadius="40dp"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/_280sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_outlet"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_below="@id/cardview_outlet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="#3F51B5"
        android:onClick="gotoFormOutlet"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="Tambah"
            android:textColor="#fff"
            android:textSize="@dimen/_17sdp"></TextView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>