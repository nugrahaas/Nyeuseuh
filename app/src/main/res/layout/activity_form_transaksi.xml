<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._fragment._package._form.FormProdukPaket">

    <TextView
        android:id="@+id/tv_outlet_form_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Transaksi"
        android:textSize="@dimen/_42sdp"></TextView>

    <EditText
        android:id="@+id/et_nama_form_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_outlet_form_transaksi"
        android:layout_margin="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:hint="Nama"
        android:textSize="@dimen/_15sdp"></EditText>

    <Spinner
        android:id="@+id/s_produk_form_transaksi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:layout_below="@id/et_nama_form_transaksi"
        android:layout_margin="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/_17sdp"></Spinner>

    <EditText
        android:id="@+id/et_tanggal_form_transaksi"
        android:layout_width="match_parent"
        android:inputType="datetime"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_produk_form_transaksi"
        android:layout_margin="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:hint="Tanggal Bayar"
        android:textSize="@dimen/_15sdp"></EditText>

    <Spinner
        android:id="@+id/s_status_form_transaksi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:layout_below="@id/et_tanggal_form_transaksi"
        android:layout_margin="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/_17sdp"></Spinner>

    <Spinner
        android:id="@+id/s_dibayar_form_transaksi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:layout_below="@id/s_status_form_transaksi"
        android:layout_margin="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/_17sdp"></Spinner>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_170sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#3F51B5"
        android:layout_height="@dimen/_42sdp">
        <TextView
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Tambah"
            android:textSize="@dimen/_19sdp"
            android:textColor="#fff"
            android:layout_height="match_parent"></TextView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>